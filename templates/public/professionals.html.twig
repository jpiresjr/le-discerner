{% extends 'public/layout.html.twig' %}

{% block content %}
<header id="hero" class="hero-ipg">
    <div class="hero-ipg__bg"></div>

    <div class="container-lg hero-ipg__content">
        <h1 class="hero-ipg__title">Discover Professionals</h1>
        <p class="hero-ipg__sub">Find specialists by area, location, or availability.</p>
    </div>
</header>

<section class="search-professionals">
    <div class="container">
        <div class="row g-4">
            <aside class="col-lg-4">
                <div class="filters-card">
                    <h3 class="filters-title">Filters</h3>
                    <form id="professionalSearchForm" class="filters-form">
                        <div class="mb-3">
                            <label class="form-label">Search by name or speciality
                                e.g. Psychology, Coaching…
                            </label>
                            <div class="input-group">
                                <span class="input-group-text"><i class="bi bi-search"></i></span>
                                <input type="text" name="q" class="form-control" placeholder="Ex: Psychoanalyst,
                                 Personal Development Coaching...">
                            </div>
                        </div>
                        <div class="mb-3">
                            <label class="form-label">Specialty</label>
                            <select name="specialty" class="form-select">
                                <option value="">All</option>
                                <option value="psicologia">Psychoanalyst</option>
                                <option value="terapia-integrativa">Integrative Therapy</option>
                                <option value="coaching">Personal Development Coaching</option>
                            </select>
                        </div>
                        <div class="mb-3">
                            <label class="form-label">Country</label>
                            <select name="country" class="form-select">
                                <option value="">All</option>
                                <option value="brasil">Brazil</option>
                                <option value="portugal">Portugal</option>
                                <option value="outro">Outro</option>
                            </select>
                        </div>
{#                        <div class="mb-3">#}
{#                            <label class="form-label">Type of Service</label>#}
{#                            <select name="category" class="form-select">#}
{#                                <option value="">All</option>#}
{#                                <option value="presencial">Presencial</option>#}
{#                                <option value="online">Online</option>#}
{#                                <option value="hibrido">Híbrido</option>#}
{#                            </select>#}
{#                        </div>#}
                        <div class="filters-actions">
                            <button type="submit" class="btn btn-theme w-100">
                            <i class="bi bi-filter-circle me-2"></i>Search
                            </button>
                        </div>
                    </form>
                </div>
            </aside>

            <div class="col-lg-8">
                <div class="results-header">
                    <div>
                        <h2 class="results-title">Professionals Found</h2>
                        <p class="results-subtitle" id="resultsCount">Loading results...</p>
                    </div>
                    <div class="results-actions">
                        <button class="btn btn-outline-theme" id="resetFilters" type="button">
                            <i class="bi bi-arrow-counterclockwise me-2"></i>Clean filters
                        </button>
                    </div>
                </div>

                <div class="row g-4" id="professionalsGrid">
                    <div class="col-12">
                        <div class="empty-state">
                            <div class="spinner-border text-theme" role="status"></div>
                            <p>Carregando profissionais...</p>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

{% endblock %}

{% block inline_javascripts %}
    {% if professionalsBootstrap is defined %}
        <script>
            window.professionalsBootstrap = {{ professionalsBootstrap|json_encode|raw }};
        </script>
    {% endif %}
{% endblock %}
